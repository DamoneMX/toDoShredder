<div class="container">
	<h1><span class="glyphicon glyphicon-list-alt"></span> Pending Tasks</h1>
	
	<div class="table-responsive"> 
		<table class="table">
		  <tr>
		    <th>Name</th>
		    <th>Notes</th>
		    <th>Alive since</th>
		    <th>Action</th>
		  </tr>
		
		<% @tasks.each do |task| %>
		  <tr>
		    <td><%= task.name %></td>
		    <td><%= task.notes %></td>
		    <td></td>
		    <td>
		    	<div class="btn-toolbar">
	  				<div class="btn-group">
			    	<%= link_to edit_task_path(task) do %>
						<span class="btn btn-default glyphicon glyphicon-edit tooltips" data-container="body" data-placement="bottom" data-title="Edit Task" > </span>
					<% end %>
					<%= link_to task, method: :delete, data: { confirm: 'Are you sure?' } do %>
						<span class="btn btn-default glyphicon glyphicon-remove-sign tooltips" data-container="body" data-placement="bottom" data-title="Delete Task" > </span>
					<% end %>
					<%= link_to task do %>
						<bspan class="btn btn-default glyphicon glyphicon-search tooltips" data-container="body" data-placement="bottom" data-title="View Task" /></span>
					<% end %>
					</div>
				</div>
		   </td>
		  </tr>
		<% end %>
		</table>
	</div>
	
	<br />
	
	<div class="row">
	  <div class="col-md-9">&nbsp;</div>
	  <div class="col-md-3">
	  	<%= link_to new_task_path do %>
			<button class="btn btn-default btn-lg"><span class="glyphicon glyphicon-plus-sign"></span>   Write another to-do</button>
		<% end %>
		</div>
	</div>

	
</div>
