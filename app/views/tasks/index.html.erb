<div class="container">
	<h1>Your To-Do's</h1>
	
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Notes</th>
	    <th>Status</th>
	    <th>Owner</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<% @tasks.each do |task| %>
	  <tr>
	    <td><%= task.name %></td>
	    <td><%= task.notes %></td>
	    <td><%= task.status %></td>
	    <td><%= task.user.firstName %></td>
	    <td><%= link_to 'Show', task %></td>
	    <td><%= link_to 'Edit', edit_task_path(task) %></td>
	    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
	
	<%= link_to 'Write another to-do', new_task_path %>
</div>
